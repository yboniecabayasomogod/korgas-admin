<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1"
    tools:context=".UpdatePetrolStationPicture">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/subTitle_uploadProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Upload Petrol Station Picture"
            android:textColor="@color/yellow"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/imageView_profile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/subTitle_uploadProfile"
            android:background="@color/yellow"
            android:scaleType="centerCrop"
            android:outlineAmbientShadowColor="@color/white" />

        <!--button for Register-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/updatePicBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_profile"
            android:background="@drawable/rounded_drawable"
            android:text="Update"
            android:textAllCaps="false"
            app:backgroundTint="@color/gray"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/yellow" />

        <ProgressBar
            android:id="@+id/idProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>